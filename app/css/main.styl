@import 'clock'

html, body
  background: #fff
  color: #525252
  font-family: Helvetica Neue, Sans
  width: 100%
  height: 100%
  margin: 0
  padding: 0

  #app 
    position: absolute
    top: 0
    right: 0
    bottom: 50px
    left: 0

  .installed #app
    bottom: 0

  #clock 
    width: 201px
    height: 201px
    position: absolute
    top: 50%
    left: 50%
    margin: -100px 0 0 -100px
    @extend .clock


  #installer
    position: absolute
    left: 0
    right: 0
    bottom: 0
    height: 50px
    line-height: 50px
    text-align: center

    button
      vertical-align: middle

  .installed #installer
    display: none
