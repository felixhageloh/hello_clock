.clock
  .tick
    left: 50%
    top: 50%
    position: absolute
    background: black

    &.minute
      width: 1px
      height: 4%
      margin-top: -(@height/2)

    &.hour
      width: 3px
      height: 6%
      margin: -(@height/2) 0 0 -1px

  .hand 
    position: absolute
    left: 50%
    padding-bottom: 10%
    margin-top: -5%
    -moz-transform-origin: 50% 90%
    -webkit-transform-origin: 50% 90%
    transform-origin: 50% 90%
    box-shadow: 0 0 2px rgba(#000, 0.2)


    &.second
      height: 40%
      top: 10%
      width: 1px
      background: red

    &.minute
      height: 40%
      top: 10%
      width: 2px
      background: #525252
      margin-left: -(@width/2)

    &.hour
      top: 20% 
      height: 30%
      width: 3px
      margin-left: -1px
      background: #525252


  .screw
    width: 3px
    height: 3px
    background: #fff
    position: absolute
    top: 50%
    left: 50%
    margin: -1px 0 0 -1px
    border-radius: 100%
